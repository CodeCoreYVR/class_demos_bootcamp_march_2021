<%- include('../partials/header.ejs') %>
<div class="card mb-4">
    <% if (post.imageUrl) {%>
    <img class='card-img-top' src='<%= post.imageUrl%>' />

        <% } %>  
        <div class='card-body'>
            <h5 class='card-title'><%= post.title %></h5>
            <p class='card-text'>
                <%= post.content  %><br>
                <em>seen <%= post.viewCount %> time(s)</em><br>
                <em>posted at <%= new Date(post.createAt).toLocaleString() %> time(s)</em> 
            </p>
        </div>
        <div class='d-flex'>
            <a class='btn btn-outline-success mr-2' href='/posts/<%= post.id%>/edit'>EDIT</a>

        </div>
        <form method='POST' action='/posts/<%= post.id  %> '>
            <input type='hidden' name='_method' value="DELETE" />
            <input type='submit' class='btn btn-outline-danger' value='DELETE' />
        </form>
</div>
<%- include('../partials/footer.ejs') %>